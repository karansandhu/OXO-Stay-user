<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hotel_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_7sdp">

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JW Marriott"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sector 35, Chandigarh"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tv_hotel_name"
            android:fontFamily="@font/roboto_thin"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/ll_pri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="@dimen/_3sdp"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 5000"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_per_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/per night"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/tv_hotel_name"
                android:fontFamily="@font/roboto_thin"
                android:textSize="12sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_pri"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rates_bg">

                <TextView
                    android:id="@+id/tv_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three_hour"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_3_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="699"
                    android:layout_below="@+id/tv_hour"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_six"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_rates_bg">

                <TextView
                    android:id="@+id/tv_hour_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/six_hour"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_6_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1100"
                    android:layout_below="@+id/tv_hour_6"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_twelve"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/ic_rates_bg"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_hour_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twelve_hour"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_12_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1700"
                    android:layout_below="@+id/tv_hour_12"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/colorAppYellow"/>

</LinearLayout>