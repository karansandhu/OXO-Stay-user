<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_25sdp"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorLlightGrey">

    
    <RelativeLayout
        android:layout_width="@dimen/_38sdp"
        android:layout_height="match_parent"
        android:background="@color/colorAppYellow">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/booked"
            android:rotation="-90"
            android:layout_centerInParent="true"/>

<!--        <TextView-->
<!--            android:layout_width="@dimen/_160sdp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/booked"-->
<!--            android:textColor="@color/colorBlack"-->
<!--            android:rotation="-90"-->
<!--            android:textSize="18sp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:fontFamily="@font/roboto_bold"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/booking_id"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/tv_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SFEAFE432"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_highlighter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/ll_one"
            android:background="@color/colorAppYellow"/>

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/ll_highlighter">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THU"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="3"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="26"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2020"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_highlighter2"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ll_date"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_below="@+id/ll_highlighter"
            android:background="@color/colorAppYellow"/>


        <LinearLayout
            android:id="@+id/ll_hotel_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ll_date"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/ll_highlighter">

            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hotel name"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms booked"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/tv_room_nos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 788"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>